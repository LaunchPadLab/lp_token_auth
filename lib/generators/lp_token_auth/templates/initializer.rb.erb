LpTokenAuth.config do |config|

  # The secret used when encrypting the JWT
  #
  config.secret = '<%= secret_key %>'

  # The number of hours the token is active
  # default: 7 * 24
  #
  config.expires = 7 * 24

  # The encryption algorithm to use
  # default: HS512
  #
  config.algorithm = 'HS512'

  # Whether to place the token in a cookie or make the developer responsible for
  # sending to the client
  # default: true
  #
  config.cookie = true

  # If `config.cookie = true`, the name of the cookie.
  # default: :auth_token
  #
  config.cookie_name = :auth_token
end
